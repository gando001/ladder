<p>There are {{ controllers.ratingPeriod.pendingCount }} games to be processed on {{ date controllers.ratingPeriod.nextPeriodAt }}.</p>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Player</th>
      <th>Rating</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each controller.byRank}}
      <tr>
        <td>{{rank}}</td>
        <td>{{image user.imageUrl}} {{user.name}}</td>
        <td>{{lowRank}}</td>
        <td>
          {{#unless isCurrentUser}}
            <div class="btn-group">
              <a href="#" class="btn">Challenge</a>
              <a href="#" class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">Log a game</a></li>
              </ul>
            </div>
          {{/unless}}
        </td>
      </tr>
    {{/each}}
  <tbody>
</table>
