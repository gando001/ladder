<p>There are {{ controllers.ratingPeriod.pendingCount }} games to be processed on {{ date controllers.ratingPeriod.nextPeriodAt }}.</p>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Player</th>
      <th>Rating</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each controller}}
      <tr>
        <td></td>
        <td>{{image user.imageUrl}} {{user.name}}</td>
        <td>{{lowRank}}</td>
        <td></td>
      </tr>
    {{/each}}
  <tbody>
</table>
