<% content_for :title do %><%= t '.feed' %> - <%= t 'application.name' %><% end %>
<div class="page-header">
  <h1><%= profile_tag current_user, 64 %></h1>
</div>

<ul class="nav nav-tabs">
  <li class="active"><%= link_to t('.feed'), root_path %></li>
  <li><%= link_to games_path do %><%= Game.model_name.human.pluralize %> <%= pending_confirmation_badge %><% end %></li>
</ul>

<br />

<div class="row">
  <div class="col-sm-5 col-sm-push-7">
    <h2><%= t('.mine') %></h2>
    <div class="list-group">
      <%= link_to new_tournament_path, :rel => 'tooltip', :'data-toggle' => 'tooltip', :title => t('.can_start', :count => Tournament.where(:owner_id => current_user).limit_left), :class => 'list-group-item' do %>
        <%= glyph :pencil %> <%= t '.start' %>
      <% end %>
      <%= render @tournaments %>
    </div>
    <% if @public_tournaments.any? %>
      <h2><%= t('.public') %></h2>
      <div class="list-group">
        <%= render @public_tournaments %>
      </div>
    <% end %>
  </div>

  <div class="col-sm-7 col-sm-pull-5">
    <% if @activity.any? %>
      <%= render @activity %>
    <% else %>
      <h2><%= t 'activity.no_activity' %></h2>
      <p><%= sanitize t 'activity.no_activity_description', :start_on => time_tag(@start_on), :end_on => time_tag(@end_on) %></p>
    <% end %>
    <ul class="pager">
      <% if @page > 1 %>
        <li class="previous"><%= link_to t('activity.newer'), :page => (@page - 1) %></li>
      <% else %>
        <li class="previous disabled"><%= link_to t('activity.newer'), :page => 1 %></li>
      <% end %>
      <li class="next"><%= link_to t('activity.older'), :page => (@page + 1) %></li>
    </ul>
  </div>
</div>
